{
    "name": "itsolutions/device-sdk",
    "description": "Devices SDK",
    "keywords": [
        "itsolutions",
        "device-sdk"
    ],
    "homepage": "https://github.com/itsolutions/device-sdk",
    "license": "The Unlicense",
    "type": "library",
    "authors": [
        {
            "name": "Ernestas V.",
            "email": "ernestas@itsolutions.lt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Itsolutions\\DeviceSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itsolutions\\DeviceSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Itsolutions\\DeviceSdk\\DeviceSdkServiceProvider"
            ],
            "aliases": {
                "DeviceSdk": "Itsolutions\\DeviceSdk\\DeviceSdkFacade"
            }
        }
    }
}
